{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "plugins": [
    "jest"
  ],
  "env": {
    "browser": true,
    "jest/globals": true,
    "node": true,
    "es6": true
  },
  "rules": {
    semi: ["error", "always"],
    "arrow-parens": ["error", "as-needed"],
    "class-methods-use-this": 0,
    "import/prefer-default-export": 0,
    "import/no-named-as-default": 0,
    "import/no-named-as-default-member": 0,
    "indent": ["error", 2, {
      "SwitchCase": 1
    }],
    "max-len": ["error", {
      "code": 120,
      "tabWidth": 4
    }],
    "no-console": ["error",
    { "allow": ["warn", "error"] }
    ],
    "space-before-function-paren": 0,
    "object-curly-newline": ["error", {
      "consistent": true
    }]
  }
}
